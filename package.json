{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "test:lib": "vitest run --project lib",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:e2e": "vitest run --project e2e",
    "test:frontend": "vitest run",
    "test:ruby": "rake test",
    "test:ruby:system": "BROWSER=headless_chrome rake test:system && BROWSER=headless_firefox rake test:system",
    "test:backend": "yarn test:ruby && yarn run test:ruby:system",
    "test": "yarn run test:frontend && yarn run test:backend",
    "coverage:frontend": "vitest run --coverage",
    "lint:js": "eslint app/frontend",
    "lint:ruby": "rubocop",
    "lint": "yarn run lint:js && yarn run lint:ruby",
    "typecheck:ruby": "steep check",
    "typecheck:js": "tsc",
    "typecheck": "yarn run typecheck:js && yarn run typecheck:ruby",
    "analyze:frontend": "vite-bundle-visualizer -o reports/vite/bundle-stats.html --open false",
    "analyze:backend": "rubycritic",
    "check": "yarn run lint && yarn run typecheck && yarn run test",
    "docker:build": "docker buildx build -t semabit-cardgame:latest .",
    "docker:tag": "docker tag semabit-cardgame:latest zaferdo/semabit-cardgame:latest",
    "docker:push": "docker push zaferdo/semabit-cardgame:latest",
    "docker": "yarn run docker:build && yarn run docker:tag && yarn run docker:push",
    "docker:gc:build": "docker buildx build -t semabit-cardgame:gc-latest --platform linux/amd64 .",
    "docker:gc:tag": "docker tag semabit-cardgame:gc-latest zaferdo/semabit-cardgame:gc-latest",
    "docker:gc:push": "docker push zaferdo/semabit-cardgame:gc-latest",
    "docker:gc": "yarn run docker:gc:build && yarn run docker:gc:tag && yarn run docker:gc:push"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint-react/eslint-plugin": "^1.53.0",
    "@eslint/js": "^9.35.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "sass": "^1.92.0",
    "typescript-eslint": "^8.42.0",
    "vite": "^5.4.19",
    "vite-bundle-visualizer": "^1.2.1",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "@fortawesome/react-fontawesome": "^3.0.2",
    "@popperjs/core": "^2.11.8",
    "@rails/actioncable": "^8.0.201",
    "@vitejs/plugin-react": "^5.0.2",
    "bootstrap": "^5.3.8",
    "react": "^19.1.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.1",
    "react-router": "^7.8.2",
    "react-router-dom": "^7.8.2",
    "rollup": "^4.50.1",
    "typescript": "^5.9.2",
    "@types/node": "^24.3.1",
    "@types/rails__actioncable": "^6.1.11",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "vite-plugin-rails": "^0.5.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "packageManager": "yarn@1.22.22"
}
